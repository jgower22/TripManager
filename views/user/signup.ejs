<%- include('../partials/header.ejs')%>
    <main>
        <div id="main_content_centered">
            <div id="signup_container">
                <h2>Create an account</h2>
                <form action="/users" method="POST">
                    <%if (typeof formFields != "undefined") {%>
                        <label class="required" for="firstName">First Name:</label>
                        <input type="text" id="firstName" name="firstName" placeholder="First Name" value="<%=formFields.firstName%>" =required>

                        <label class="required" for="lastName">Last Name:</label>
                        <input type="text" id="lastName" name="lastName" placeholder="Last Name" value="<%=formFields.lastName%>" required>

                        <label class="required" for="email">Email:</label>
                        <input type="email" id="email" name="email" placeholder="Email Address" value="<%=formFields.email%>" required>

                        <label class="required" for="password">Password:</label>
                        <input type="password" id="password" name="password" placeholder="Password" value="<%=formFields.password%>" minlength="8" maxlength="64" required>
                    <%} else {%>
                        <label class="required" for="firstName">First Name:</label>
                        <input type="text" id="firstName" name="firstName" placeholder="First Name" required>

                        <label class="required" for="lastName">Last Name:</label>
                        <input type="text" id="lastName" name="lastName" placeholder="Last Name" required>

                        <label class="required" for="email">Email:</label>
                        <input type="email" id="email" name="email" placeholder="Email Address" required>

                        <label class="required" for="password">Password:</label>
                        <input type="password" id="password" name="password" placeholder="Password" minlength="8" maxlength="64" required>
                    <%}%>
                    <input type="submit" value="Sign Up" id="submit" class="greenButton">
                </form>
                <div id="login">
                    <h3>Already have an account?</h3>
                    <a href="/users/login">
                        <button class="greenButton" id="accountButton" type="button">Log In Here</button>
                     </a>
                </div>
            </div>
        </div>
    </main>
<%- include('../partials/footer.ejs')%>