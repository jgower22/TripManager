<%- include('../partials/header.ejs')%>
    <main>
        <script defer src="/javascript/formValidation.js"></script>
        <div id="main_content_centered">
            <div id="form_container">
                <h2>Create a new trip</h2>
                <form action="/trips" method="POST">
                    <label class="required" for="name">Trip Name:</label>
                    <input type="text" id="name" name="name" placeholder="Trip Name" minlength="2" maxlength="50" required>

                    <label class="required" for="location">Location:</label>
                    <input type="text" id="location" name="location" placeholder="Location" minlength="2" maxlength="50" required>

                    <label class="required" for="startDate">Start Date:</label>
                    <input type="date" id="startDate" name="startDate" required>

                    <label class="required" for="endDate">End Date:</label>
                    <input type="date" id="endDate" name="endDate" required>

                    <label class="required" for="details">Details:</label>
                    <textarea id="details" name="details" placeholder="Description of Trip" rows="4" minlength="3" maxlength="2000" required></textarea>

                    <input value="Cancel" id="cancel" readonly="readonly" class="greenButton">
                    <input type="submit" value="Create Trip" id="submit" class="greenButton">
                </form>
            </div>
        </div>
    </main>
<%- include('../partials/footer.ejs')%>